<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="${basedir}/logs/nlog-internal.log" >
  <targets>
      <target xsi:type="File" name="fileLog" fileName="${basedir}/logs/${shortdate}.log" layout="${longdate} ${uppercase:${level}} ${message}" archiveEvery="Day" enableArchiveFileCompression="true" encoding="utf-8" maxArchiveFiles="10" />
      <target xsi:type="NLogViewer" name="udpViewer" address="udp://127.0.0.1:9001"/>
      <target xsi:type="ColoredConsole" name="console" encoding="utf-8" layout="${message}"/>
  </targets>
  <rules>
      <logger name="*" minlevel="Trace" writeTo="fileLog,udpViewer,console" />
  </rules>
</nlog>